<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>



<!-- FORM -->
		<record model="ir.ui.view" id="appointment_form_view">
			<field name="name">matrix.appointment.form</field>
			<field name="model">matrix.appointment</field>
			<field name="arch" type="xml">
				<form string="appointment Form">


					<!-- Header -->
					<header>

						<!-- update -->
						<button 
								type="object" 
								class="oe_highlight"

								name="update"

								string="Actualizar"                               
						/>

						<!-- remove_myself -->
						<button 
								type="object" 
								class="oe_highlight oe_right"

								name="remove_myself"

								string="Eliminar"                               
						/>
					</header>


					<sheet>
						<group>
							<group>
<!--
								<field name="date_start"      widget="float_time"   />
-->

								<field name="patient_pre"		
															attrs="{
																				'required':[('patient', 'in', [False]),],
																		}"  
									/>


								<field name="dni_pre"/>

								<field name="vspace"/>

								<field name="patient"		
															attrs="{
																				'required':[('patient_pre', 'in', [False]),],
																		}"  

									/>

								<field name="state"		required="1"/>
								<field name="app_type"	required="1"/>
							</group>


							<group>
								<field name="doctor"		required="1"/>
								<field name="date_start"	required="1"/>
<!--	
								<field name="x_display"/>
								<field name="date_stop"		required="1"/>
								<field name="date_delay"/>
-->
							</group>

							<group>
							</group>
							<group>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>


<!-- TREE -->
		<record model="ir.ui.view" id="appointment_view_tree">
			<field name="name">matrix.appointment.tree</field>
			<field name="model">matrix.appointment</field>
			<field name="arch" type="xml">

				<tree string="appointment Tree">
<!--
					<field name="name"/>
-->
					<field name="date_start"/>
					<field name="date_stop"/>
				
					<field name="patient"/>
					
					<field name="doctor"/>

					<field name="app_type"/>
					<field name="state"/>
					<field name="x_display"/>
				</tree>
			</field>
		</record>







<!-- ACTIONS -->


		<!-- appointment -->
		<record model="ir.actions.act_window" id="appointment_all_tree_action">

			<field name="name">appointment Tree Action</field>
			
			<field name="res_model">matrix.appointment</field>
			
			<field name="view_type">form</field>

			<field name="view_mode">tree,form,calendar</field>

			<field name="domain">[]</field>

			<field name="context">{}</field>

			<field name="limit">1000</field>
<!--
			<field name="view_mode">tree,form,kanban,graph,calendar</field>
			<field name="view_id" ref="account_line_view_contasis_tree"/>
-->
		</record>




